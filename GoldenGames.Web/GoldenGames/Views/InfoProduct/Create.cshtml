
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model GoldenGames.Areas.Admin.ViewModels.JogoViewModel

@using GoldenGames.Areas.Admin.ViewModels

@{
    ViewData["Title"] = "Create";

    var categorias = (List<Categorium>)ViewData["Categorias"];
    var consolas = (List<Consola>)ViewData["Consolas"];
}

<body class="aboutCreateProduct">
    <section class="CreateGame">

        <div class="row">
            <div class="AboutGame col-md-4">
                <h1>Create Jogo</h1>
                <hr />
                
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="IdCategoria" class="control-label"></label>
                    <select asp-for="IdCategoria" class ="form-control">    
                        <!-- Ciclo que mostre todas as categorias que existem na base de dados-->
                        @foreach(var categoria in @categorias)
                        {
                            <option value="@categoria.Id">@categoria.Nome</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="IdConsola" class="control-label"></label>
                    <select asp-for="IdConsola" class ="form-control">
                        @foreach(var consola in @consolas)
                        {
                            <option value="@consola.Id">@consola.Nome</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Produtora" class="control-label"></label>
                    <input asp-for="Produtora" class="form-control" />
                    <span asp-validation-for="Produtora" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label"> Anexar imagem de capa do jogo (.png, .jpg, .jpeg).</label>
                    <input type="file" accept=".png,.jpg,.jpeg" name="UploadedImage" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                </form>
            
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </section>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}