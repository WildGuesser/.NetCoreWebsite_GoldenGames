@model GoldenGames.Models.Review

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="InfoProduct" asp-action="CreateReview" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="GameId" value="@Model.GameId" />
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

